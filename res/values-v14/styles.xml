<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="h1Text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h2Text" parent="android:Widget.Holo.Light.TextView">
        <!-- item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bodyText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bodyTextBold" parent="bodyText">
        <item name="android:textColor">@color/text_lighter</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="bodyTextSmall" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
